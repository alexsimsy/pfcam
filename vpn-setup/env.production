# SIMSY Network Production Environment Configuration
# Copy this file to .env and update with your actual values

# Database Configuration
POSTGRES_PASSWORD=your-secure-postgres-password

# Backend Configuration
SECRET_KEY=your-very-long-secure-secret-key-here-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# FTP Configuration
FTP_PUBLIC_HOST=your-server-public-ip
FTP_USER_NAME=ftpuser
FTP_USER_PASS=your-secure-ftp-password

# Frontend Configuration
VITE_API_BASE_URL=https://your-domain.com/api
VITE_WS_URL=wss://your-domain.com/ws

# VPN Configuration
VPN_SERVER_IP=your-server-public-ip
VPN_SUBNET=10.8.0.0/24
VPN_PORT=1194

# SIMSY Network Configuration
SIMSY_APN=simsy.network
SIMSY_SUBNET=192.168.100.0/24

# Security Configuration
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Monitoring Configuration
LOG_LEVEL=INFO
MONITORING_ENABLED=true 